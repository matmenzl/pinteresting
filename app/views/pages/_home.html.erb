<!-- simple registration-box-->
<div class="row-fluid">
  <div class="span-4">
    <div class="form-top">
      <div class="form-top-left">
        <h3><%= t "landing.find" %></h3>
      </div>
      <div class="form-top-right">
        <i class="fa fa-pencil"></i>
      </div>
    </div>
    <div class="form-bottom">
      <%= form_tag new_user_registration_path, method: :get, class: "registration-form" do %>
        <div class="form-group">
          <%= label_tag :street, "Street Address", class: "sr-only" %>
          <%= text_field_tag :street, "", placeholder: t("landing.street"), class: "form-streetaddress form-control", id: "form-first-name" %>
        </div>
        <div class="form-group">
          <%= label_tag :city, "City", class: "sr-only" %>
          <%= text_field_tag :city, "", placeholder: t("landing.city"), class: "form-city form-control", id: "form-city" %>
        </div>
        <div class="form-group">
          <%= label_tag :country, "Country", class: "sr-only" %>
          <%= text_field_tag :country, "", placeholder: t("landing.country"), class: "form-city form-control", id: "form-city" %>
        </div>
        <%= submit_tag t("landing.buttons.find"), class: "btn" %>
      <% end %>
    </div>
  </div>
</div>

<p>
