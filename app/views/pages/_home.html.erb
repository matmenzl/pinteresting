<div class="row-fluid">
  <div class="span-4">
    <div class="form-top">
      <div class="form-top-left">
        <h3>Find your neighbourhood</h3>
      </div>
      <div class="form-top-right">
        <i class="fa fa-pencil"></i>
      </div>
    </div>
    <div class="form-bottom">
      <form role="form" action="/users/sign_up" method="get" class="registration-form">
        <div class="form-group">
          <label class="sr-only" for="form-email">Street Address</label>
            <input type="text" name="street" placeholder="Street Address and Number.." class="form-streetaddress form-control" id="form-first-name">
          </div>
          <div class="form-group">
            <label class="sr-only" for="form-city">City</label>
            <input type="text" name="city" placeholder="City..." class="form-city form-control" id="form-city">
          </div>
          <div class="form-group">
            <label class="sr-only" for="form-city">Country</label>
            <input type="text" name="country" placeholder="Country..." class="form-city form-control" id="form-city">
          </div>
          <button type="submit" class="btn">Find</button>
      </form>
    </div>
  </div>
</div>

